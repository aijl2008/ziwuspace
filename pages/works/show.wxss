.name {
  font-size: 14px;
  font-weight: 400;
  overflow: hidden;
}

.current-price {
  display: flex;
  justify-content: space-between;
}

.current-price .price {
  width: 50%;
}

.current-price .money {
  font-size: 14px;
  color: orange;
}

.current-price .click {
  width: 50%;
  text-align: right;
  font-size: 10px;
  color: gray;
}

.bid {
  display: flex;
  justify-content: space-between;
}

.bid .title {
  width: 50%;
  font-size: 14px;
  color: black;
  font-weight: 400;
}

.bid .click {
  width: 50%;
  text-align: right;
  font-size: 10px;
  color: gray;
}

.tabs {
  display: table;
  width: 100%;
  box-shadow: 0rem 0.02rem 0rem 0rem rgba(221, 222, 227, 1);
}

.tab-item {
  display: table-cell;
  text-align: center;
  padding: .75rem 0;
  position: relative;
  font-size: .75rem;
  font-weight: bold;
}

.organ {
  background-color: #fff;
  margin-top: .25rem;
  padding: .75rem;
  color: #666;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.organ-name {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 0 .4rem;
  flex: 1;
}

.organ image {
  width: 1rem;
  height: 1rem;
  display: inline-block;
  border-radius: 50%;
  object-fit: cover;
}

.store {
  padding: .2rem .4rem;
  border: 1px solid #18BD6F;
  color: #18BD6F;
  font-size: .6rem;
  border-radius: .2rem;
  background: transparent;
  text-decoration: none;
}

.btn-pay {
  margin-left: 3rem;
  width: 100%;
  border-radius: 0.1rem;
  padding: .45rem 0;
  text-align: center;
  font-size: .8rem;
  color: #fff;
  font-weight: 400;
  background-color: #FF6700;
}

.table {
  background-color: white;
}

.td {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.rank {
  color: #969696;
}

.rank-active {
  color: #FF5F00;
}

.rank .item {
  text-align: center;
}

.rank .nickname {
  width: 50px;
  margin-left: 0;
}

.rank .time {
  width: 100px;
  margin: 0 0 0 0;
}

.rank .status {
  width: 50px;
  margin-right: 0;
}

.rank .price {
  width: 50px;
  margin-right: 0;
}

.info .item {
  background-color: lightgray;
  margin: 1px;
  display: flex;
  justify-content: space-between;
}


.prop {
  display: flex;
  justify-content: space-between;
}

.prop-active {
  background-color: #F4F4F4;
  color: #969696;
}

.prop text {
  margin: 2px;
}