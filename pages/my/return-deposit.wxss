.name {
  color: #969696;
  font-size: .55rem;
  padding: .675rem .75rem .4rem;
  line-height: 1;
}



.no {
  color: #323232;
  font-size: .6rem;
  padding: 0 .75rem .75rem;
  word-break: break-all;
  line-height: 1;
  font-weight: 400;
}

.select {
  width: 3.5rem;
  height: 1rem;
  line-height: .9rem;
  margin-top: -.5rem;
  right: 0;
  text-align: center;
  color: #27282d;
  font-size: .45rem;
  border: .1rem solid #47484c;
  border-radius: .5rem;
  right: .75rem;
}

.note {
  line-height: 2rem;
  padding-left: .75rem;
  font-size: .5rem;
  color: #969696;
  background-color: #f5f5f5;
  box-shadow: 0 0.25rem 0.375rem rgba(0, 0, 0, .08);
  clear: both;
}



.sumbit {
  text-align: center;
  padding: 2rem .5rem 0;
}

.btn {

  display: block;
  color: #fff;
  height: 2.7rem;
  line-height: 2.7rem;
  border-radius: 2px;
  background-color: #18BD6F;
  font-size: .75rem;
  position: fixed;
  width: 16rem;
  left: 50%;
  margin-left: -8rem;
  bottom: 0;
}