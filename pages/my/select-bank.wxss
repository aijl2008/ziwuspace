.container {
  margin: 0;
  font-size: 1.4rem;
  line-height: 1.5;
  color: #000;
  background-color: #f5f5f5;
  height: 100%;
}

.bank-container {
  color: #fff;
  font-size: .5rem;
  background-color: #dc2814;
  height: .85rem;
  border-radius: .425rem;
  display: inline-block;
  padding: 0 .35rem;
  margin-left: .5rem;
}

.name {
  color: #969696;
  font-size: .6rem;
  padding: .675rem 1rem .4rem;
  line-height: .9rem;
}

.ok-box {
  width: 3.75rem;
  height: 2rem;
  line-height: 2rem;
  position: absolute;
  top: 50%;
  margin-top: -1rem;
  right: 0;
}

.ok {
  content: "\e906";
  font-family: home;
  width: 1.1rem;
  height: 1.1rem;
  border-radius: 100%;
  text-align: center;
  display: block;
  color: #fff;
  font-size: .65rem;
  line-height: 1.1rem;
  background-color: #ff0000;
  position: absolute;
  top: 50%;
  margin-top: -.55rem;
  right: .75rem;
}

.no {
  color: #323232;
  font-size: .9rem;
  padding: 0 1rem;
  word-break: break-all;
  padding-bottom: .75rem;
}

.default {
  color: #fff;
  font-size: .5rem;
  background-color: #dc2814;
  height: .85rem;
  border-radius: .425rem;
  display: inline-block;
  padding: 0 .35rem;
  margin-left: .5rem;
}

.note {
  font-size: .5rem;
  line-height: .75rem;
  color: #969696;
}