.justify{
  justify-content: space-between;
  display: flex;
}

.balance-box {
  display: flex;
  flex-flow: row;
}

.blance {
  font-size: .55rem;
  color: #969696;
  margin-right: 1.4rem;
}

.money {
  font-size: .8rem;
  color: #18BD6F;
  white-space: nowrap;
}

.help {
  display: block;
  float: left;
  height: 1rem;
  line-height: .8rem;
  border: .1rem solid #a5a5a5;
  width: 3.425rem;
  border-radius: .5rem;
  font-size: .45rem;
  color: #969696;
  margin-top: .575rem;
  text-align: center;
}

.btn {
  display: inline-block;
  border-width: .1rem;
  border-style: solid;
  padding: 0 .5rem;
  height: 1.5rem;
  border-radius: 1rem;
  text-align: center;
  line-height: 1.3rem;
  font-size: .5rem;
  margin: 0 1.5rem;
}

.black {
  border-color: #46474b;
  color: #27282d;
}

.red {
  background-color: #18BD6F;
  color: #fff;
  border-color: #18BD6F;
}

.btn .note {
  line-height: 1.5rem;
  text-align: center;
  color: #969696;
  font-size: .55rem;
  padding-bottom: .25rem;
}

.active {
  background:#efefef;
}

.tr{
  display: flex;
  flex-direction: row;
}

.th, .td {
  width: 25%;
  justify-content: center;
  color: #ccc;
  display: flex;
  align-items: center;
}

.th {
  font-weight: 400;
}