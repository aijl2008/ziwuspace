.image-box {
  width: 100%;
  position: relative;
}

.name {
  line-height: 1.75rem;
  font-size: .75rem;
  font-weight: 400;
}

.gray {
  color: gray;
}

.status {
  width: 100%;
  background-color: rgba(0, 0, 0, .5);
  border-radius: .2rem 0 0 0;
  position: absolute;
  bottom: 0;
  color: white;
}

.status-name {
  padding: 8rpx;
  font-size: small;
}

.time {
  color: rgba(255, 152, 0, 1);
}

.auctioning {
  background: linear-gradient(180deg, rgba(255, 152, 0, 1) 0%, rgba(255, 95, 0, 1) 100%);
}

.organ {
  display: flex;
}

.organ .ico {
  width: 32rpx;
  height: 32rpx;
}

.organ .name {
  font-size: 32rpx;
}

.pricing {
  font-size: 32rpx;
  color: gray;
}