.special-container {
  position: relative;
}

.name {
  font-size: 32rpx;
  font-weight: 400;
}

.special-container .gray {
  color: gray;
}

.special-container .status_box {
  width: 100%;
  background-color: rgba(0, 0, 0, .5);
  border-radius: .2rem 0 0 0;
  position: absolute;
  bottom: 0;
  color: white;
}

.special-container .status {
  padding: 8rpx 0;
  font-size: small;
}

.special-container .timer {
  font-size: smaller;
}

.special-container .time {
  color: rgba(255, 152, 0, 1);
}

.special-container .status_box .auctioning {
  background: linear-gradient(180deg, rgba(255, 152, 0, 1) 0%, rgba(255, 95, 0, 1) 100%);
}

.organ {
  display: flex;
}

.organ .ico {
  width: 32rpx;
  height: 32rpx;
}

.organ .name {
  font-size: 32rpx;
}

.pricing {
  font-size: 32rpx;
  color: gray;
}