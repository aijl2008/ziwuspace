.image_box {
  position: relative;
}

.image_box .status {
  position: absolute;
  display: inline-block;
  height: 1rem;
  line-height: 1rem;
  padding: 0 .3rem;
  color: #fff;
  border-radius: .1rem;
  left: .25rem;
  bottom: .5rem;
  font-size: .65rem;
}

.auctioning {
  background: linear-gradient(180deg, rgba(255, 152, 0, 1) 0%, rgba(255, 95, 0, 1) 100%);
}


.title {
  font-size: .8rem;
  color: #27282D;
  overflow: hidden;
  font-weight: bold;
  line-height: 1rem;
}

.price_box {
  font-size: .7rem;
  color: #969696;
  display: flex;
  flex-direction: row;
}

.price {
  color: #FF5F00;
  font-weight: bold;
}

.number {
  font-size: .6rem;
  color: #666;
  align-items: flex-end;
}